{
  "name": "learn_monorepo",
  "version": "1.0.0",
  "description": "monorepo 学习",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "dev:mock": "pnpm --filter @breeze/mock-server run dev",
    "dev:main": "pnpm --filter main-app run dev",
    "dev:vue3-app": "pnpm --filter vue3-app run dev",
    "dev:vue3-sub": "pnpm --filter vue3-sub run dev",
    "dev:all": "concurrently -n mock,main,vue3-app,vue3-sub -c yellow,blue,green,cyan \"pnpm dev:mock\" \"pnpm dev:main\" \"pnpm dev:vue3-app\" \"pnpm dev:vue3-sub\"",
    "build": "pnpm -r run build",
    "build:apps": "pnpm --filter \"./apps/*\" run build",
    "lint": "eslint . --max-warnings=0 --cache --cache-location .eslintcache",
    "lint:fix": "eslint . --fix --cache --cache-location .eslintcache",
    "lint:all": "pnpm -r --parallel run lint",
    "lint:all:fix": "pnpm -r --parallel run lint:fix",
    "lint:style": "stylelint '**/*.{css,scss,sass,vue}' --max-warnings=0 --cache --cache-location .stylelintcache",
    "lint:style:fix": "stylelint '**/*.{css,scss,sass,vue}' --fix --cache --cache-location .stylelintcache",
    "format": "prettier '.' --write --cache --cache-location .prettiercache",
    "prepare": "husky"
  },
  "author": "",
  "license": "ISC",
  "keywords": [],
  "devDependencies": {
    "@breeze/eslint-config": "workspace:*",
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "@tsconfig/node24": "catalog:",
    "@types/node": "catalog:",
    "commitizen": "catalog:",
    "concurrently": "catalog:",
    "cz-conventional-changelog": "catalog:",
    "eslint": "catalog:",
    "husky": "catalog:",
    "lint-staged": "catalog:",
    "postcss-html": "catalog:",
    "postcss-scss": "catalog:",
    "prettier": "catalog:",
    "stylelint": "catalog:",
    "stylelint-config-recommended-vue": "catalog:",
    "stylelint-config-standard": "catalog:",
    "stylelint-config-standard-scss": "catalog:",
    "stylelint-order": "catalog:",
    "ts-node": "catalog:",
    "typescript": "catalog:"
  }
}
