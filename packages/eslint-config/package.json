{
  "name": "@breeze/eslint-config",
  "version": "1.0.0",
  "type": "module",
  "description": "Shared ESLint configuration for Breeze monorepo",
  "scripts": {
    "type-check": "tsc --noEmit"
  },
  "exports": {
    ".": "./src/index.ts",
    "./base": "./src/base.ts",
    "./vue3": "./src/vue3.ts",
    "./typescript": "./src/typescript.ts",
    "./prettier": "./src/prettier.ts",
    "./ignores": "./src/ignores.ts"
  },
  "files": [
    "src"
  ],
  "dependencies": {
    "@eslint/js": "catalog:",
    "@vue/eslint-config-typescript": "catalog:",
    "eslint-config-prettier": "catalog:",
    "eslint-plugin-prettier": "catalog:",
    "eslint-plugin-vue": "catalog:",
    "typescript-eslint": "catalog:"
  },
  "peerDependencies": {
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": ">=5.0.0"
  }
}
